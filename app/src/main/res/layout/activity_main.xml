<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity"
    android:background="@drawable/background_gradient">
    <ImageView
        android:layout_width="139dp"
        android:layout_height="130dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/mainLogo"
        android:layout_marginTop="@dimen/_95sdp"
        android:background="@drawable/mainlogo"
        ></ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainLogo"
        android:textSize="@dimen/_8ssp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="#NYANG VILLAGE"
        android:gravity="center"
        android:paddingEnd="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:id="@+id/logoTitle"
        android:fontFamily="@font/scd7extrabold"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoTitle"
        android:textSize="@dimen/_31ssp"
        android:textColor="@color/white"
        android:text="WELCOME"
        android:gravity="center"
        android:layout_marginTop="@dimen/_50sdp"
        android:id="@+id/subTitle"
        android:fontFamily="@font/scd7extrabold"
        ></TextView>
    <View
        android:layout_width="@dimen/_210sdp"
        android:layout_height="@dimen/_1sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subTitle"
        android:background="@color/white"
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/border"></View>
    <EditText
        android:layout_width="@dimen/_213sdp"
        android:layout_height="@dimen/_44sdp"
        android:id="@+id/studentId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/border"
        android:hint="학번(ID)"
        android:background="@drawable/login_btn_bg"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/white"
        android:paddingStart="@dimen/_15sdp"
        android:textColorHint="@color/white"
        android:drawableStart="@drawable/ic_baseline_login_person_30"
        android:textSize="@dimen/_12ssp"
        android:drawablePadding="@dimen/_5sdp"
        android:fontFamily="@font/scd6bold"
        android:paddingEnd="@dimen/_2sdp"
        ></EditText>
    <EditText
        android:layout_width="@dimen/_213sdp"
        android:layout_height="@dimen/_44sdp"
        android:id="@+id/password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/studentId"
        android:hint="PASSWORD"
        android:background="@drawable/login_btn_bg"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_10sdp"
        android:paddingStart="@dimen/_15sdp"
        android:paddingEnd="@dimen/_2sdp"
        android:textColorHint="@color/white"
        android:drawableStart="@drawable/ic_baseline_login_lock_30"
        android:textSize="@dimen/_12ssp"
        android:drawablePadding="@dimen/_7sdp"
        android:fontFamily="@font/scd6bold"
        android:letterSpacing="0"
        ></EditText>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        android:gravity="center"
        android:layout_marginTop="@dimen/_6sdp"
        >

        <Button
            android:id="@+id/submit"
            android:layout_width="@dimen/_213sdp"
            android:layout_height="@dimen/_44sdp"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/login_edit_bg"
            android:gravity="center"
            android:text="Login"
            android:textColor="#ff8400"
            android:textSize="@dimen/_15ssp"
            android:fontFamily="@font/scd6bold"></Button>

        <Button
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignEnd="@+id/submit"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/ic_baseline_login_24"></Button>
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        ></Button>
</androidx.constraintlayout.widget.ConstraintLayout>